/dts-v1/;
#include "sun8i-v3s.dtsi"
#include "sunxi-common-regulators.dtsi"
#include <dt-bindings/input/input.h>

/ {
	model = "Protonic PRTV3S";
	compatible = "prt,prtv3s", "allwinner,sun8i-v3s";

	aliases {
		serial0 = &uart0;
		ethernet0 = &emac;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};
};

&mmc0 {
	pinctrl-0 = <&mmc0_pins_a>;
	pinctrl-names = "default";
	broken-cd;
	bus-width = <4>;
	vmmc-supply = <&reg_vcc3v3>;
	status = "okay";
	max-frequency = <25000000>;
};

&i2c0 {
	status = "okay";
};

&uart0 {
	pinctrl-0 = <&uart0_pins_a>;
	pinctrl-names = "default";
	status = "okay";
};

&usb_otg {
	dr_mode = "host";
	status = "okay";
};

&usbphy {
	/* usb0_id_det-gpio = <&pio 5 6 GPIO_ACTIVE_HIGH>; */
	status = "okay";
};

&codec {
	allwinner,audio-routing =
		"Headphone", "HP",
		"Headphone", "HPCOM",
		"MIC1", "Mic",
		"Mic",  "HBIAS";
	status = "okay";
};

&lradc {
	vref-supply = <&reg_vcc3v0>;
	status = "okay";
	button@200 {
		label = "F1";
		linux,code = <KEY_F1>;
		channel = <0>;
		voltage = <200000>;
	};

	button@400 {
		label = "F2";
		linux,code = <KEY_F2>;
		channel = <0>;
		voltage = <400000>;
	};

	button@600 {
		label = "F3";
		linux,code = <KEY_F3>;
		channel = <0>;
		voltage = <600000>;
	};

	button@800 {
		label = "F4";
		linux,code = <KEY_F4>;
		channel = <0>;
		voltage = <800000>;
	};
};

&mmc1 {
	pinctrl-0 = <&mmc1_pins>;
	pinctrl-names = "default";
	broken-cd;
	bus-width = <4>;
	vmmc-supply = <&reg_vcc3v3>;
	status = "okay";
};

&emac {
	phy-handle = <&int_mii_phy>;
	phy-mode = "mii";
	allwinner,leds-active-high;
	status = "okay";
};

&spi0 {
	status = "okay";
	flash: s25sl032p@0 {
		compatible = "spansion,m25p80";
		spi-max-frequency = <20000000>;
		reg = <0>;
		#address-cells = <1>;
		#size-cells = <1>;

		partition@0 {
			label = "boot";
			reg = <0x0 0x80000>;
		};

		partition@40000 {
			label = "env";
			reg = <0x80000 0x10000>;
		};

		partition@50000 {
			label = "kernel";
			reg = <0x90000 0x370000>;
		};
	};
};
